{
  "name": "my-budget-keeper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "check:types": "tsc --pretty --noEmit",
    "check:format": "prettier --check .",
    "format": "prettier --write .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "lint-staged": "^12.4.1",
    "next": "12.1.5",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts, tsx, js, jsx, html, css, json}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/node": "17.0.30",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "autoprefixer": "^10.4.5",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "husky": "^7.0.0",
    "postcss": "^8.4.13",
    "prettier": "2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "4.6.4"
  }
}
